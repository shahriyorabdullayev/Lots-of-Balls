<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#CB000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_result_dialog"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/result"
            android:gravity="center"
            android:layout_marginVertical="16dp"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="@font/jua_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/balll"/>
            <TextView
                android:id="@+id/tv_dialog_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/jua_regular"
                android:textColor="@color/white"
                android:textSize="36sp"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best Result"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:fontFamily="@font/jua_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/balll"/>
            <TextView
                android:id="@+id/tv_dialog_best_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/jua_regular"
                android:textColor="@color/white"
                android:textSize="36sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btn_back_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_menu_btn"
            android:fontFamily="@font/jua_regular"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp"
            android:text="@string/menu"
            android:textColor="@color/black"
            android:textSize="28sp" />

    </LinearLayout>
</LinearLayout>